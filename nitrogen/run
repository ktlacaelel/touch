#!/usr/bin/env ruby

require 'rubygems'
require 'json'

config = JSON::parse(ARGV[0])

nitrogen_port  = config['nitrogen_port']
occipital_port = config['occipital_port']

command = "cd /home/ubuntu/nitrogen/webserver && daemon -r -n nitrogen_#{nitrogen_port} -D /home/ubuntu/nitrogen/webserver ./server.js /home/ubuntu/nitrogen/storage #{nitrogen_port} localhost:#{occipital_port}"
system command
puts command

command = "cd /home/ubuntu/occipital && daemon -r -n occipital_#{nitrogen_port} -D /home/ubuntu/occipital thin start -R config.ru -p #{occipital_port}"
system command
puts command

