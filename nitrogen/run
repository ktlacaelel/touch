#!/usr/bin/env ruby

require 'rubygems'
require 'json'

config = JSON::parse(ARGV[0])

nitrogen_port  = config['nitrogen_port']
occipital_port = config['occipital_port']

system "daemon -r -n nitrogen_#{nitrogen_port} -D /home/ubuntu/nitrogen/webserver ./server.js /home/ubuntu/nitrogen/storage #{nitrogen_port} localhost:#{occipital_port}"

system "echo nitrogen initiated | mail -s \"nitrogen for `hostname` started\" ktlacaelel@gmail.com"

